<div class="container mt-5 text-center">
  <h1 class="mb-4">Library Books</h1>

  <div class="d-flex justify-content-center">
    <%= link_to "Add New Book", new_book_path, class: "btn btn-primary mb-3" %>
  </div>

  <div class="d-flex justify-content-center">
    <table class="table table-striped w-75">
      <thead class="thead-dark">
        <tr>
          <th>Title</th>
          <th>Author</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td>
              <% if book.status == "borrowed" %>
                <span class="badge bg-danger">Borrowed</span>
              <% else %>
                <span class="badge bg-success">Available</span>
              <% end %>
            </td>
            <td>
              <%= link_to "View", book_path(book), class: "btn btn-info btn-sm" %>
              <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
              <%= link_to "Delete", book, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              
              <% if book.status == "available" %>
                <%= link_to "Borrow", new_book_borrowing_path(book), class: "btn btn-secondary btn-sm" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
