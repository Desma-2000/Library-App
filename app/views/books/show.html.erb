<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Status:</strong> 
  <% if @book.borrowed? %>
    <span class="badge bg-danger">Borrowed</span>
  <% else %>
    <span class="badge bg-success">Available</span>
  <% end %>
</p>

<%= link_to "Back to Library", books_path, class: "btn btn-secondary mb-3" %>

<h3>Borrowing History</h3>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Borrower</th>
      <th>Date Borrowed</th>
      <th>Date Returned</th>
    </tr>
  </thead>
  <tbody>
    <% @book.borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.borrower_name %></td>
        <td><%= borrowing.borrowed_at.strftime("%B %d, %Y") %></td>
        <td><%= borrowing.returned_at ? borrowing.returned_at.strftime("%B %d, %Y") : "Not Returned" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
