<h1>Borrowing History for <%= @borrower_name %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Book</th>
      <th>Date Borrowed</th>
      <th>Date Returned</th>
    </tr>
  </thead>
  <tbody>
    <% @borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.book.title %></td>
        <td><%= borrowing.borrowed_at.strftime("%B %d, %Y") %></td>
        <td><%= borrowing.returned_at ? borrowing.returned_at.strftime("%B %d, %Y") : "Not Returned" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back", books_path, class: "btn btn-secondary" %>
